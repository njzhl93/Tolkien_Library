<%= div_for comment do %>
        <p>
        	<strong>
        	    <span class="user">
        	    	<%= link_to comment.user.name, comment.user %>
        	    </span>
        	</strong>
                
                        Posted <%= time_ago_in_words(comment.created_at) %> ago
                
                <br/>
                <%= comment.body %>
        </p>
<% end %>