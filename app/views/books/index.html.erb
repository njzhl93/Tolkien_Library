<h1>Listing Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Writer</th>
    <th>Date</th>
    <th>Publisher</th>
    <th>Content</th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.writer %></td>
    <td><%= book.date %></td>
    <td><%= book.publisher %></td>
    <td><%= book.content %></td>
 
  </tr>
<% end %>
</table>

<br />
<% if signed_in? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>