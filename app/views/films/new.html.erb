<h1>New Film</h1>
<div class="row">
  <div class="span8 offset4">
    <%= form_for(@film) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :date %>
    <%= f.text_field :date %>

    <%= f.label :director %>
    <%= f.text_field :director %>

    <%= f.label :character %>
    <%= f.text_field :character %>

    <%= f.label :content %>
    <%= f.text_field :content, size: '24x4' %>


    <%= f.submit"Create ", class: "btn btn-large btn-primary"  %> 
<% end %>
  </div>
</div>