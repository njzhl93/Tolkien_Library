<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @film.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @film.date %>
</p>

<p>
  <strong>Content:</strong>
  <%= @film.content %>
</p>

<p>
  <strong>Director:</strong>
  <%= @film.director %>
</p>

<p>
  <strong>Character:</strong>
  <%= @film.character %>
</p>

<h2>Comments</h2>
 <div id="fcomments">
         <%= render :partial => @film.fcomments %>
 </div>


<%= form_for [@film, Fcomment.new] do |f| %>
        <p>
                <%= f.label :body, "New comment" %><br/>
                <%= f.text_area :body %>
        </p>
        <p><%= f.submit "Add comment" %></p>
<% end %>

<%= link_to 'Edit', edit_film_path(@film) %> |
