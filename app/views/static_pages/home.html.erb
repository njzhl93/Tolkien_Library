<% provide(:title, 'Home') %>
<% if signed_in? %>
      <div class="row">
        <aside class="span4">
          <section>
            <%= render 'shared/user_info' %>
          </section>
          <section>
            <%= render 'shared/micropost_form' %>
          </section>
        </aside>
        <div class="span8">
              <h3>Micropost Feed</h3>
              <%= render 'shared/feed' %>
            </div>
      </div>  
    <% else %>
      <div class="center hero-unit">
        <h1>Library of Middle Earth</h1>

        <h2>
          Welcome to the libarary of Middle Earth
        </h2>

        <%= link_to "Sign up now!", signup_path, 
                                    class: "btn btn-large btn-primary" %>
      </div>
  <%= link_to image_tag("JRRT.png", alt: "JRRT"), 'http://en.wikipedia.org/wiki/J._R._R._Tolkien', id: "ico" %>
  <% end %> 